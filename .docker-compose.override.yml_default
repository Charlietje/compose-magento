version: '3'

services:

  mailcatcher:
    ports:
      - 1080:1080


  nginx:
    volumes:
      - ${APPLICATION:-../magento}:/phpapp


  application:
    volumes:
      - ${APPLICATION:-../magento}:/phpapp
    environment:
      - "XDEBUG_CONFIG=remote_host=docker.for.mac.localhost remote_connect_back=0"


  elastic-hq:
    ports:
      - 5000:5000


  nginx_ssl:
    ports:
      - 80:80
      - 443:443
  
  mysql:
    ports:
      - 3306:3306

